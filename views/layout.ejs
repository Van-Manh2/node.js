<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Thư Viện - Dashboard</title>
    <!-- Liên kết Bootstrap từ CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        /* Thanh điều hướng bên trái */
        .sidebar {
            background-color: #343a40;
            min-height: 100vh;
            color: #fff;
            padding-top: 20px;
        }

        .sidebar .nav-link {
            color: #fff;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
        }

        .sidebar .nav-item.active .nav-link {
            background-color: #007bff;
            border-radius: 5px;
        }

        /* Header */
        .header {
            background-color: #007bff;
            color: #fff;
            padding: 20px 0;
        }

        .header h1 {
            margin: 0;
            font-size: 2rem;
        }

        .header p {
            font-size: 1rem;
        }

        /* Card */
        .card {
            border-radius: 8px;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        .card-body {
            text-align: center;
        }

        .card-footer {
            background-color: #f8f9fa;
        }

        /* Khu vực nội dung chính */
        .content {
            padding: 30px;
        }

        footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 15px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>

    <div class="container-fluid">
        <div class="d-flex">

            <!-- Sidebar (Thanh điều hướng bên trái) -->
            <div class="col-md-3 col-lg-2 sidebar">
                <h4 class="text-center text-white">Quản Lý Thư Viện</h4>
                <ul class="nav flex-column">

                    <li class="nav-item">
                        <a class="nav-link" href="/books">
                            <i class="fas fa-book"></i> Quản lý Sách
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employees">
                            <i class="fas fa-users"></i> Quản lý Nhân Viên
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/members">
                            <i class="fas fa-id-card"></i> Quản lý Người Mượn
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/borrowings">
                            <i class="fas fa-exchange-alt"></i> Quản lý Mượn & Trả
                        </a>
                    </li>
                </ul>
            </div>
            <main class="container">
                <%- include(content) %>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Hệ Thống Quản Lý Thư Viện. Tất cả quyền được bảo lưu.</p>
    </footer>

    <!-- Liên kết Bootstrap JS và Font Awesome từ CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqdfPXHpeNd3gpx5IExl0cm5sGOABjvjdIflY9lqaV5f9"
        crossorigin="anonymous"></script>
</body>

</html>