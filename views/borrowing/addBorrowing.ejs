<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Giao Dịch Mượn Sách</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-header {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-header h1 {
            font-size: 24px;
            margin: 0;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-custom {
            width: 100%;
            padding: 12px;
            font-size: 16px;
        }

        .btn-back {
            text-align: center;
            font-size: 16px;
        }
    </style>
</head>

<body>
    <div class="container my-5 form-container">
        <div class="form-header text-center">
            <h1>Thêm Giao Dịch Mượn Sách</h1>
        </div>

        <form action="/borrowings/add" method="POST">
            <!-- Thành viên -->
            <div class="form-group">
                <label for="member" class="form-label">Chọn Thành Viên:</label>
                <select name="member" class="form-select" required>
                    <option value="">Chọn thành viên</option>
                    <% members.forEach(function(member) { %>
                        <option value="<%= member._id %>">
                            <%= member.name %>
                        </option>
                        <% }); %>
                </select>
            </div>

            <!-- Sách -->
            <div class="form-group">
                <label for="book" class="form-label">Chọn Sách:</label>
                <select name="book" class="form-select" required>
                    <option value="">Chọn sách</option>
                    <% books.forEach(function(book) { %>
                        <option value="<%= book._id %>">
                            <%= book.title %> - Tác giả: <%= book.author %>
                        </option>
                        <% }); %>
                </select>
            </div>

            <!-- Ngày mượn -->
            <div class="form-group">
                <label for="borrowedDate" class="form-label">Ngày Mượn:</label>
                <input type="date" name="borrowedDate" class="form-control" required>
            </div>

            <!-- Nút gửi -->
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-custom">Thêm Giao Dịch</button>
            </div>

            <!-- Nút quay lại -->
            <div class="form-group btn-back">
                <a href="/borrowings" class="btn btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>